<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_height="130dp"
    android:layout_centerHorizontal="true"
    app:cardElevation="7dp"
    android:padding="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="3dp"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:background="#288962">

            <TextView
                android:id="@+id/Live"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Live"
                android:textSize="15sp"
                android:scaleX="1.2"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:background="#ff033e"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 DEC 2016"
                android:id="@+id/matchDate"
                android:textColor="#ffffff"
                android:layout_below="@+id/Live"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <!--<View-->
                <!--android:layout_width="10dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_height="10dp"-->
                <!--android:layout_below="@id/matchDate"-->
                <!--android:background="#ffffff"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_marginLeft="10dp"/>-->
            <!--<View-->
                <!--android:layout_width="10dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_height="10dp"-->
                <!--android:layout_below="@id/matchDate"-->
                <!--android:background="#ffffff"-->
                <!--android:layout_marginLeft="30dp"/>-->

            <!--<View-->
                <!--android:layout_width="10dp"-->
                <!--android:layout_height="10dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_below="@id/matchDate"-->
                <!--android:background="#ffffff"-->
                <!--android:layout_marginLeft="90dp"/>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 T20i (Day/Night)"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_below="@id/matchDate"
                android:layout_marginTop="20dp"
                android:id="@+id/type"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:text="Pakistan vs NewZealand"
                android:textSize="20sp"
                android:layout_above="@+id/loc"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="22dp" />

            <TextView
                android:id="@+id/loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="at Abu Dhabi"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/title"
                android:layout_marginBottom="22dp" />
        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
