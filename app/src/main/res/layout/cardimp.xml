<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="30dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="#288962">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 DEC 2016"
                android:id="@+id/date"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <View
                android:layout_width="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="10dp"
                android:layout_below="@id/date"
                android:background="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="10dp"
                android:layout_below="@id/date"
                android:background="#ffffff"
                android:layout_marginLeft="30dp"/>

            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/date"
                android:background="#ffffff"
                android:layout_marginLeft="90dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 T20i (Day/Night)"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:layout_below="@id/date"
                android:layout_marginTop="20dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pakistan vs India"
                android:textSize="30dp"
                android:id="@+id/title"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:text="at Abu Dhabi"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>


</LinearLayout>

</android.support.v7.widget.CardView>
